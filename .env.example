# ======== Global ========
NODE_ENV=development

# ======== API ========
API_PORT=3000
MONGODB_URI=mongodb://mongodb:27017/atestados
REDIS_URL=redis://redis:6379
JWT_SECRET=replace_me_with_a_long_random_string
CORS_ORIGINS=http://localhost:5173,http://127.0.0.1:5173

# Rate limits (requests per minute)
AUTH_RATE_LIMIT_RPM=30
ICD_RATE_LIMIT_RPM=60

# ======== WHO ICD API ========
WHO_ICD_CLIENT_ID=your_client_id_here
WHO_ICD_CLIENT_SECRET=your_client_secret_here
WHO_ICD_BASE_URL=https://id.who.int
WHO_ICD_RELEASE=2024-01
WHO_ICD_LANGUAGE=en

# ======== WEB (Vite) ========
# The frontend calls the API via same-origin /api. In dev, Vite proxies /api to the backend.
VITE_API_BASE_URL=/api
VITE_DEV_PROXY_TARGET=http://localhost:3000
VITE_USE_API=false                 # Feature flag: false = keep using local mocks; true = call real API
VITE_AUTH_TOKEN_KEY=auth_token     # localStorage key for persisted auth token
VITE_HTTP_TIMEOUT_MS=10000         # Axios request timeout (ms)
VITE_HTTP_RETRY_ATTEMPTS=0         # Number of retry attempts for idempotent GETs (0 to disable)
VITE_HTTP_RETRY_DELAY_MS=300       # Base delay (ms) for retry backoff (exponential)

# ======== Audit / Logs ========
# TTL em dias para expiração automática de logs de auditoria (opcional)
AUDIT_TTL_DAYS=
